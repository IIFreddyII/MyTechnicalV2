<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstalationSoftFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_cleanLap"
                app:srcCompat="@drawable/office" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="121dp"
                android:layout_height="56dp"
                android:foregroundGravity="center"
                android:foregroundTint="#020202"
                android:gravity="center"
                android:text="@string/instalationsoft3"
                android:textStyle="bold"
                android:textColor="@color/servicios"
                app:layout_constraintEnd_toEndOf="@+id/imageView26"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView26"
                app:layout_constraintTop_toBottomOf="@+id/imageView26" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                app:layout_constraintEnd_toEndOf="@+id/txt_cleanLap"
                app:layout_constraintStart_toStartOf="@+id/txt_cleanLap"
                app:layout_constraintTop_toBottomOf="@+id/txt_cleanLap" />

            <TextView
                android:id="@+id/txt_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                app:layout_constraintEnd_toEndOf="@+id/textView22"
                app:layout_constraintStart_toStartOf="@+id/textView22"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <TextView
                android:id="@+id/txt_price4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                app:layout_constraintEnd_toEndOf="@+id/textView23"
                app:layout_constraintStart_toStartOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <TextView
                android:id="@+id/txt_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                app:layout_constraintEnd_toEndOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView26"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                app:srcCompat="@drawable/aplicaciones" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="119dp"
                android:layout_height="53dp"
                android:layout_marginEnd="60dp"
                android:foregroundGravity="center"
                android:foregroundTint="#020202"
                android:gravity="center"
                android:text="@string/instalationsoft4"
                android:textColor="@color/servicios"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView27"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView27"
                app:layout_constraintTop_toBottomOf="@+id/imageView27" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/img_revisionpc"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/antirus" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="121dp"
                android:layout_height="46dp"
                android:foregroundGravity="center"
                android:foregroundTint="#020202"
                android:gravity="center"
                android:text="@string/menu_instalationSoft"
                android:textStyle="bold"
                android:textColor="@color/servicios"
                app:layout_constraintEnd_toEndOf="@+id/imageView25"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView25"
                app:layout_constraintTop_toBottomOf="@+id/imageView25" />

            <ImageView
                android:id="@+id/img_revisionpc"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sistema" />

            <TextView
                android:id="@+id/txt_cleanLap"
                android:layout_width="121dp"
                android:layout_height="44dp"
                android:layout_marginStart="60dp"
                android:foregroundGravity="center"
                android:foregroundTint="#020202"
                android:gravity="center"
                android:text="@string/instalationsoft2"
                android:textStyle="bold"
                android:textColor="@color/servicios"
                app:layout_constraintEnd_toEndOf="@+id/img_revisionpc"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/img_revisionpc"
                app:layout_constraintTop_toBottomOf="@+id/img_revisionpc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>